[user]
	name = Gerardo Munguia
	email = gerardomunguiahoyo@gmail.com
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[push]
	default = simple
[alias]
	vimdiff = mergetool -t vimdiff
	co = checkout
	cp = cherry-pick
	fa = fetch --all -p
	k = log --graph --oneline --all
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
